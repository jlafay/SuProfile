<div id="comment{{ commentaire.id }}" itemscope itemtype="http://schema.org/Comment">
	{% if is_granted('ROLE_ADMIN') %}
		<div class="pull-right">
			<a href="{{ path('SuProfileblog_supprimer_commentaire', {'id': commentaire.id}) }}" class="btn">
			<i class="icon-trash"></i>
			</a>
		</div>
	{% endif %}
	<em>Par <span itemprop="author">{{ commentaire.user }}</span>,
	le <time datetime="{{ commentaire.date|date('c') }}" itemprop="datePublished">{{ commentaire.date|date('d/m/Y Ã  H\\hi') }}</time> :</em><br />
	<div class="well well-small" itemprop="articleBody">
		{{ commentaire.contenu|markdown }}
	</div>
</div>
