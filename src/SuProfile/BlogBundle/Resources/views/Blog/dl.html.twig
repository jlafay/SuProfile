{% extends "SuProfileBlogBundle::layout.html.twig" %}

{% block title %}
	SupDownload - {{ parent() }}
{% endblock %}

{% block SuProfileblog_body %}
 <ul>
    {% for article in articles %}
		<div class="border-article">
			{% include "SuProfileBlogBundle:Blog:article.html.twig" with {'accueil': true} %}
		</div>
		<hr />
	{% else %}
		<div class="border-article">
			<p>Personne n'a encore proposé de téléchargement.</p>
		</div>
    {% endfor %}
</ul>

{% if nb_page > 1 %}
    <div class="pagination">
        <ul>
			{% for p in range(1, nb_page) %}
				<li{% if p == page %} class="active"{% endif %}>
				<a href="{{ path('SuProfileblog_dl', {'page': p}) }}">{{ p }}</a>
				</li>
			{% endfor %}
		</ul>
    </div>
{% endif %}

{% endblock %}